#!/usr/bin/env bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   help             This help message"
  echo "   clean            Clean up caches (brew)"
  echo "   copilot          Show workspace Copilot instruction/chatmode usage"
  echo "   copilot-global   Link user-level Copilot prompt files (advanced)"
  echo "   dock             Apply macOS Dock settings"
  echo "   macos            Apply macOS system defaults"
  echo "   test             Run tests"
  echo "   asdf             Update asdf global packages"
  echo "   brew             Update Homebrew/Cask packages"
  echo "   node             Update Node packages"
  echo "   update           Update packages and pkg managers (OS, brew, npm)"
}

sub_test () {
  bats "$DOTFILES_DIR"/test/*.bats
}

sub_update () {
  topgrade
}

sub_clean () {
  brew cleanup
}

sub_macos () {
  for DEFAULTS_FILE in "${DOTFILES_DIR}"/macos/defaults*.sh; do
    echo "Applying ${DEFAULTS_FILE}" && . "${DEFAULTS_FILE}"
  done
  echo "Done. Some changes may require a logout/restart to take effect."
}

sub_dock () {
  . "${DOTFILES_DIR}/macos/dock.sh" && echo "Dock reloaded."
}

sub_copilot () {
  # If running inside the dotfiles repo, just delegate to make target
  if [[ "$PWD" == "$DOTFILES_DIR" ]]; then
    make copilot
    return
  fi

  # Ensure workspace .github structure exists in current repo
  mkdir -p .github/instructions .github/chatmodes

  # Copy (not link) baseline workspace instructions/controller file if absent
  if [[ ! -f .github/copilot-instructions.md ]]; then
    cp "$DOTFILES_DIR/.github/copilot-instructions.md" .github/copilot-instructions.md
    echo "Added .github/copilot-instructions.md"
  fi

  # Seed chat modes if directory empty
  shopt -s nullglob
  CHAT_EXISTING=( .github/chatmodes/*.chatmode.md )
  shopt -u nullglob
  if [[ ${#CHAT_EXISTING[@]} -eq 0 ]]; then
    if [[ -d "$DOTFILES_DIR/.github/chatmodes" ]]; then
      cp "$DOTFILES_DIR"/.github/chatmodes/*.chatmode.md .github/chatmodes/ 2>/dev/null || true
      echo "Seeded chat modes into .github/chatmodes/"
    fi
  fi

  # Invoke selector with target = current repo; catalog sourced from dotfiles repo
  COPILOT_SOURCE_DIR="$DOTFILES_DIR/config/copilot/instructions" \
  COPILOT_TARGET_DIR="$PWD/.github/instructions" \
  "$DOTFILES_DIR/bin/copilot-select"

  echo "Workspace Copilot setup complete in $PWD/.github";
}

sub_copilot-global () {
  cd ${DOTFILES_DIR} && make copilot-global
}

sub_asdf () {
  cd ${DOTFILES_DIR} && make asdf-packages
}

sub_brew () {
  cd ${DOTFILES_DIR} && make macos-packages
}

sub_node () {
  cd ${DOTFILES_DIR} && make node-packages
}

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac
